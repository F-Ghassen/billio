{% extends 'admin/base.html.twig' %}

{% block title %}{{ parent() }} - Edit User {% endblock %}

{% block body %}

    {{  parent() }}
    <!-- Main content -->
    <div class="content-wrapper">
        <!-- Page header -->
        <div class="page-header">
            <div class="page-header-content">
                <div class="page-title">
                    <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Home</span> - User</h4>
                </div>
            </div>

            <div class="breadcrumb-line">
                <ul class="breadcrumb">
                    <li><a href="{{ path('index_admin_page') }}"><i class="icon-home2 position-left"></i> Home</a></li>
                    <li><a href="{{ path('list_users_page') }}">User</a></li>
                    <li class="active">Edit User</li>
                </ul>
            </div>
        </div>
        <!-- /page header -->

        <!-- Content area -->
        <div class="content">

            <!-- Horizontal form -->
            <div class="panel panel-flat">

                <div class="panel-body">
                    <div class="container-fluid">
                        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                        {{ form_errors(form) }}

                        <div class="form-group">
                            {{ form_label(form.username, "Username", {'label_attr': {'class': 'control-label col-lg-2'}}) }}
                            {{ form_errors(form.username) }}
                            <div class="col-lg-10">
                                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.email, "Email", {'label_attr': {'class': 'control-label col-lg-2'}}) }}
                            {{ form_errors(form.email) }}
                            <div class="col-lg-10">
                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.current_password, "Current Password", {'label_attr': {'class': 'control-label col-lg-2'}}) }}
                            {{ form_errors(form.current_password) }}
                            <div class="col-lg-10">
                                {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="container">
                            <div class="row">
                                <input type="submit" value="Save" class="btn bg-teal-300" />
                                <a class="btn btn-default" href="{{ path('list_users_page') }}">Back</a>
                            </div>
                        </div>

                        {{ form_rest(form) }}
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
            <!-- /horizotal form -->

            {% include 'admin/footer.html.twig' %}

        </div>
        <!-- /content area -->

    </div>
    <!-- /main content -->
    </div>
    <!-- /page content -->

    </div>
    <!-- /page container -->

{% endblock %}