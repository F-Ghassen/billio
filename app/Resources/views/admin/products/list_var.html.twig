{% extends 'admin/base.html.twig' %}

{% block title %}{{ parent() }} - List Products {% endblock %}

{% block body %}

    {{ parent() }}

    <!-- Main content -->
    <div class="content-wrapper">
        <!-- Page header -->
        <div class="page-header">
            <div class="page-header-content">
                <div class="page-title">
                    <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Produits</span> - List</h4>
                </div>
            </div>

            <div class="breadcrumb-line">
                <ul class="breadcrumb">
                    <li><a href="{{ path('index_admin_page') }}"><i class="icon-home2 position-left"></i> Home</a></li>
                    <li class="active">Produits</li>
                </ul>
            </div>
        </div>
        <!-- /page header -->

        <!-- Content area -->
        <div class="content">

            <!-- Table -->
            <div class="panel panel-flat">
                <div class="table-responsive" style="margin: 20px">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Color</th>
                            <th>Stock S</th>
                            <th>Stock M</th>
                            <th>Stock L</th>
                            <th>Stock XL</th>
                            <th>Stock XXL</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for v in variations %}
                            <tr>
                                <td>{{ "%04d"|format(v.id) }}</td>
                                <td>{{ v.color }}</td>
                                <td>{{ v.s }}</td>
                                <td>{{ v.m }}</td>
                                <td>{{ v.l }}</td>
                                <td>{{ v.xl }}</td>
                                <td>{{ v.xxl }}</td>
                                {% for img in v.images %}

                                {% endfor %}
                                <td>
                                    <ul class="icons-list mt-15">
                                        <li><a href="{{ path('edit_product_variation_images_page', {'id': v.id}) }}" data-popup="tooltip" title="Edit Product Variation Image"><i class="icon-file-picture2"></i></a></li>
                                        <li><a href="{{ path('edit_product_variation_page', {'id': v.id}) }}" data-popup="tooltip" title="Edit Product Variation"><i class="icon-pencil5"></i></a></li>
                                        <li><a href="{{ path('delete_product_variations_page', {'id': v.id}) }}" data-popup="tooltip" title="Delete Product Variation" onclick="return confirm('Are you sure you want to Delete this Product Variation?')"><i class="icon-trash"></i></a></li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

            </div>
            <!-- /table -->

            {{ include('admin/footer.html.twig') }}

        </div>
        <!-- /content area -->
    </div>
    <!-- /main content -->

    </div>
    <!-- /page content -->

    </div>
    <!-- /page container -->

{% endblock %}