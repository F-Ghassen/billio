{% extends 'admin/base.html.twig' %}

{% block title %}{{ parent() }} - List Users {% endblock %}

{% block body %}

    {{ parent() }}

    <!-- Main content -->
    <div class="content-wrapper">
        <!-- Page header -->
        <div class="page-header">
            <div class="page-header-content">
                <div class="page-title">
                    <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Collections</span> - List</h4>
                </div>
            </div>

            <div class="breadcrumb-line">
                <ul class="breadcrumb">
                    <li><a href="{{ path('index_admin_page') }}"><i class="icon-home2 position-left"></i> Home</a></li>
                    <li class="active">Collections</li>
                </ul>
            </div>
        </div>
        <!-- /page header -->

        <!-- Content area -->
        <div class="content">

            <!-- Table -->
            <div class="panel panel-flat">
                <div class="row" style="margin: 20px">
                    <a href="{{ path('add_collection_page') }}" class="btn btn-success"><i class="icon-plus3 position-left"></i>Ajouter Collection</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for c in collections %}
                            <tr>
                                <td>{{ "%04d"|format(c.id) }}</td>
                                <td>{{ c.name }}</td>
                                <td>
                                    {% if c.enabled %}
                                        <span class="label bg-success-400">Visible</span>
                                    {% else %}
                                        <span class="label bg-danger-400">Disabled</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <ul class="icons-list mt-15">
                                        <li><a href="{{ path('enable_collections_page', {'id': c.id}) }}" data-popup="tooltip" title="Visible"><i class="icon-checkbox-checked"></i></a></li>
                                        <li><a href="{{ path('delete_collections_page', {'id': c.id}) }}" data-popup="tooltip" title="Delete"><i class="icon-trash" onclick="return confirm('Are you sure you want to Delete this Collection?')"></i></a></li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

            </div>
            <!-- /table -->

            {{ include('admin/footer.html.twig') }}

        </div>
        <!-- /content area -->
    </div>
    <!-- /main content -->

    </div>
    <!-- /page content -->

    </div>
    <!-- /page container -->

{% endblock %}