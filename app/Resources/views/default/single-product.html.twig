<!-- Single gallery Item Start -->
<div class="single_gallery_item wow fadeInUpBig" data-wow-delay="0.2s">
    <!-- Product Image -->
    <div class="product-img">
        <a href="{{ path('product_details_page', {'id': p.id, 'v_id': v.id}) }}">
            <img src="{{ vich_uploader_asset(v.images[0],'imageFile') }}" alt="">
        </a>
    </div>
    <!-- Product Description -->
    <div class="product-description">
        <h4 class="product-price">
            {% if p.promoEnabled %}
                {% if app.request.locale == 'en' %}
                    <s style='color: dimgrey; font-size: 80%'>{{ (p.price)|number_format(2) }}</s>
                    {{ (p.price - p.price*p.promoMontant/100)|number_format(2) }} $
                {% else %}
                    <s style='color: dimgrey; font-size: 80%'>{{ (p.price * 2.9)|number_format(2) }}</s>
                    {{ ((p.price - p.price*p.promoMontant/100) * 2.9)|number_format(2) }} TND
                {% endif %}
            {% else %}
                {% if app.request.locale == 'en' %}
                    {{ (p.price)|number_format(2) }} $
                {% else %}
                    {{ (p.price * 2.9)|number_format(2) }} TND
                {% endif %}
            {% endif %}
        </h4>
        <p style="font-size:23px">{{ p.name }}</p>
        <!-- Add to Cart -->
        <form action="{{ path('product_details_page', {'id': p.id, 'v_id': v.id}) }}" class="cart" method="post">
            <button type="submit" class="btn btn-dark mt-2 btn-acheter">{{ 'translate.add_cart'|trans }}</button>
        </form>

    </div>
</div>
<!-- Single gallery Item Start -->